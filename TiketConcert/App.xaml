        <Style x:Key="ButtonSplashEx" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#FFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border"  BorderBrush="Black" BorderThickness="0 1 0 0"  CornerRadius="0" Background="{TemplateBinding Background}">
                            <Grid>
                                <ContentPresenter Margin="10 0 0 0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Триггеры цвета фона -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                                <Setter TargetName="border" Property="Background" Value="#c0c0c0"/>
